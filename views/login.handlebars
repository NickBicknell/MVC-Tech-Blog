<div class="row font-monospace">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <input class="form-input my-1" type="text" placeholder="email" id="email-login" />
      </div>
      <div class="form-group">
        <input class="form-input my-1" type="password" placeholder="password" id="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-2" type="submit">login</button>
      </div>
    </form>
  </div>

  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form">
      <div class="form-group">
        <input class="form-input my-1" type="text" placeholder="username" id="name-signup" />
      </div>
      <div class="form-group">
        <input class="form-input my-1" type="text" placeholder="email" id="email-signup" />
      </div>
      <div class="form-group">
        <input class="form-input my-1" type="password" placeholder="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary mt-2" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
